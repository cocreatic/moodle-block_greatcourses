{{!
    @template block_greatcourses/detail

    This template renders the template content area for a resource.

    Example context (json):
    {}
}}

{{#course}}
<div class="catalog-return">
    <a href="{{baseurl}}/blocks/greatcourses/">{{#pix}}i/return, core{{/pix}}  {{#str}}returntocatalog, block_greatcourses{{/str}}</a>
</div>
<div class="course-detail coursecategory-{{category}} {{#paymenturl}}type-premium{{/paymenturl}}">
    <div class="coursebanner-box">
        {{#imagepath}}
            <img src="{{.}}" />
        {{/imagepath}}

        <span class="coursetitle">{{{coursename}}}</span>

    </div>

    <div class="content-detail">

        <div class="ranking-summary">
            {{#rating}}
            <div>
                <label>{{formated}}</label>
                <div class="greatcourses-ranking-stars">
                    <div class="greatcourses-ranking-stars-bar" style="width: {{percent}}%;"></div>
                    {{#pix}}stars_empty, block_greatcourses{{/pix}}
                </div>
            </div>
            <div>
                <label>{{#str}}ratingslabel, block_greatcourses, {{count}} {{/str}}</label>
            </div>
            {{/rating}}
            <div>
                <label>{{#str}}commentslabel, block_greatcourses, {{commentscount}} {{/str}}</label>
            </div>
        </div>

        <div class="context-detail content-layout">
            <div class="experts-duration">
                {{#custom}}
                    {{#expertsshort}}
                        <div class="expert-box">
                            <h3>{{title}}</h3>
                            <span>{{{value}}}</span>
                        </div>
                    {{/expertsshort}}
                    {{#duration}}
                        <div class="duration-box">
                            <h3>{{title}}</h3>
                            <span>{{value}}</span>
                        </div>
                    {{/duration}}
                {{/custom}}
            </div>
            {{#custom}}
                {{#thematic}}
                    <div class="thematic-box">
                            <h3>{{title}}</h3>
                            <span>{{{value}}}</span>
                    </div>
                {{/thematic}}
            {{/custom}}
        </div>

    </div>

    <div class="share-container">
        <div class="content-layout">
            <h3>{{#str}}sharecourse, block_greatcourses{{/str}}</h3>

            <div class="share-content">
                <div>
                    {{#str}}sharecoursedesc, block_greatcourses{{/str}}
                </div>
                <div class="share-icons">
                {{#networks}}
                    <a href="{{url}}" target="_blank">
                        <i class="fa fa-{{icon}}"></i>
                    </a>
                {{/networks}}
                </div>

                <div class="input-container">
                    <div class="input-group">
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fa fa-link"></i>
                            </span>
                        </div>
                        <input type="text" name="courselink" aria-label="course link" value="{{baseurl}}/blocks/greatcourses/detail.php?id={{id}}">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="media-container">
        <div class="content-layout">
            {{#custom}}
                {{#media}}
                <div class="media-content">
                    <video controls="controls">
                        <source src="{{value}}" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
                {{/media}}
            {{/custom}}
            <div class="enroll-content enrollstate-{{enrollstate}}">
                <div class="enroll-container">
                    <div class="{{#haspaymentgw}}haspaymentgw{{/haspaymentgw}}">
                    {{#custom}}
                        {{#enrolltitle}}<p>{{enrolltitle}}</p>{{/enrolltitle}}
                        {{#enrollurl}}
                            <a href="{{{enrollurl}}}" class="btn btn-primary">
                                {{enrollurllabel}}
                            </a>
                        {{/enrollurl}}
                        {{#haspaymentgw}}
                            {{#requireauth}}
                                <div class="requireauth">{{#str}} requireauth, block_greatcourses, {{{requireauthurl}}} {{/str}}</div>
                            {{/requireauth}}
                            {{^requireauth}}
                                {{#fee}}
                                <a class="btn btn-primary"
                                    data-action="core_payment/triggerPayment"
                                    data-component="enrol_fee"
                                    data-paymentarea="fee"
                                    data-itemid="{{itemid}}"
                                    data-cost="{{cost}}"
                                    data-description={{#quote}}{{description}}{{/quote}}>
                                    {{label}}
                                </a>
                                {{/fee}}
                            {{/requireauth}}
                        {{/haspaymentgw}}

                    {{/custom}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="info-container">
        {{#custom}}
            {{#units}}
                <div class="content-layout units-box">
                    <h3>{{title}}</h3>
                    <div class="content-box units">
                        {{{value}}}
                    </div>
                </div>
            {{/units}}
        {{/custom}}

        {{#custom}}
            {{#requirements}}
                <div class="content-layout requirements-box">
                    <h3>{{title}}</h3>
                    <div class="content-box requirements">
                        {{{value}}}
                    </div>
                </div>
            {{/requirements}}
        {{/custom}}

        {{#custom}}
            {{#experts}}
                <div class="content-layout experts-box">
                    <h3>{{title}}</h3>
                    <div class="content-box experts">
                        {{{value}}}
                    </div>
                </div>
            {{/experts}}
        {{/custom}}

        {{#custom}}
            {{#license}}
                <div class="content-layout">
                    <h3>{{title}}</h3>
                    <div class="content-box license">
                        {{#path}}
                        <a rel="license" href="http://creativecommons.org/licenses/{{path}}/" target="_blank">
                            {{{text}}}
                            <br />
                            <img alt="Licencia Creative Commons" src="https://licensebuttons.net/l/{{path}}/88x31.png" />
                        </a>
                        {{/path}}
                        {{^path}}
                            {{text}}
                        {{/path}}
                    </div>
                </div>
            {{/license}}
        {{/custom}}
    </div>

    {{#detailinfo}}
        <div class="detailinfo">
            <div class="content-layout">
                {{{detailinfo}}}
            </div>
        </div>
    {{/detailinfo}}

    <div class="detail-foot">
        {{#rating}}
            <div class="ranking-detail">
                <div>
                    <label>{{formated}}</label>
                    <div class="greatcourses-ranking-stars">
                        <div class="greatcourses-ranking-stars-bar" style="width: {{percent}}%;"></div>
                        {{#pix}}stars_empty, block_greatcourses{{/pix}}
                    </div>
                </div>
                <div>
                    {{#detail}}
                    <div class="ranking-detail-item">
                        <label>{{#str}} countstars, block_greatcourses, {{value}} {{/str}}</label>
                        <div class="rating-bar"><div style="width: {{avg}}%"></div></div>
                        <div>{{avg}}%</div>
                    </div>
                    {{/detail}}
                </div>
            </div>
        {{/rating}}
        {{#hascomments}}
            <div class="course-comments">
                <h3>{{#str}}commentstitle, block_greatcourses{{/str}}</h3>
                {{#comments}}
                    <div>
                        <img src="{{userpicture}}" class="userpicture" />
                        <div>
                            <div class="timeformated">{{timeformated}}</div>
                            <p>
                                {{content}}
                            </p>
                        </div>
                    </div>
                {{/comments}}
            </div>
        {{/hascomments}}
    </div>
</div>
{{#haspaymentgw}}
{{#js}}
    require(['core_payment/gateways_modal'], function(modal) {
        modal.init();
    });
{{/js}}
{{/haspaymentgw}}

{{/course}}
