{{!
    @template block_greatcourses/detail

    This template renders the template content area for a resource.

    Example context (json):
    {}
}}

<div class="course-detail">
    <div class="coursebanner-box">
{{#courseimages}}
        <img src="{{.}}" />
{{/courseimages}}

{{#course}}
        <span class="coursetitle">{{fullname}}</span>
{{/course}}

    </div>

    <div class="content-detail">

{{#custom}}
    {{#duration}}
        <div class="duration-title">
            <h3>{{title}}</h3>
            <span>{{value}}</span>
        </div>
    {{/duration}}
{{/custom}}

        <div class="media-container">
{{#custom}}
    {{#media}}
            <div class="media-content">
                <video controls="controls">
                    <source src="{{value}}" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
    {{/media}}
{{/custom}}
            <div class="enroll-content">
                <div class="enroll-container">
                    <div class="enroll-content">
{{#custom}}
    {{#enrolled}}
                        {{# pix }} check, block_greatcourses {{/ pix }}
                        <p>{{#str}}enrolled, block_greatcourses{{/str}}</p>
                        <a href="{{baseurl}}/course/view.php?id={{#course}}{{id}}{{/course}}" class="btn btn-primary">
                            {{#str}}gotocourse, block_greatcourses{{/str}}
                        </a>
    {{/enrolled}}
    {{^enrolled}}
        {{#enrollable}}
                        <p>{{#str}}enrollrequired, block_greatcourses{{/str}}</p>
                        <a href="{{baseurl}}/blocks/greatcourses/detail.php?id={{#course}}{{id}}{{/course}}&enroll=1" class="btn btn-primary">
                            {{#str}}enroll, block_greatcourses{{/str}}
                        </a>
                    </div>
        {{/enrollable}}
        {{^enrollable}}
                        <p>{{#str}}notenrollable, block_greatcourses{{/str}}</p>
        {{/enrollable}}
    {{/enrolled}}
{{/custom}}
                    </div>
                </div>
            </div>
        </div>
{{#custom}}
    {{#thematic}}
        <h3>{{title}}</h3>
        <div class="content-box what-to-learn">
            {{{value}}}
        </div>
    {{/thematic}}
{{/custom}}
        <div class="share-container">
            <h3>{{#str}}sharecourse, block_greatcourses{{/str}}</h3>

            <div class="share-content">
                <div>
                    {{#str}}sharecoursedesc, block_greatcourses{{/str}}
                </div>
                <div class="share-icons">
{{#networks}}
                        <a href="{{url}}" target="_blank">
                            <i class="fa fa-{{icon}}"></i>
                        </a>
{{/networks}}
                </div>

                <div class="input-container">
                    <div class="input-group">
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fa fa-link"></i>
                            </span>
                        </div>
                        <input type="text" name="courselink" aria-label="course link" value="{{baseurl}}/course/view.php?id={{#course}}{{id}}{{/course}}">
                    </div>
                </div>
            </div>
        </div>

{{#custom}}
    {{#units}}
        <h3>{{title}}</h3>
        <div class="content-box">
            {{{value}}}
        </div>
    {{/units}}
{{/custom}}

        <div class="detail-foot">
{{#custom}}
    {{#requirements}}
            <h3>{{title}}</h3>
            <div class="content-box">
                {{{value}}}
            </div>
    {{/requirements}}
{{/custom}}

{{#custom}}
    {{#license}}
            <h3>{{title}}</h3>
            <div class="content-box license">
                {{#path}}
                <a rel="license" href="http://creativecommons.org/licenses/{{path}}/" target="_blank">
                    {{{text}}}
                    <br />
                    <img alt="Licencia Creative Commons" src="https://licensebuttons.net/l/{{path}}/88x31.png" />
                </a>
                {{/path}}
                {{^path}}
                    {{text}}
                {{/path}}
            </div>
    {{/license}}
{{/custom}}
        </div>
    </div>
</div>